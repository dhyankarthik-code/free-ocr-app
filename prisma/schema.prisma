// Prisma Schema for Infy Galaxy User Management
// Docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"

}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(cuid())
  googleId      String    @unique
  email         String    @unique
  name          String?
  picture       String?
  // Quota Tracking (Lifetime)
  usagebytes    Int       @default(0)
  
  // Location Tracking (from IP)
  country       String?
  city          String?
  region        String?
  lastLoginIp   String?
  systemIp      String?
  lastLoginAt   DateTime?
  
  // Quota Management
  timezone      String?     // For local time calculation
  lastUsageDate DateTime?   // Track last usage day (in local time)
  
  // Privacy & Terms Consent
  acceptedTerms Boolean   @default(false)
  acceptedAt    DateTime?

  @@index([email])
  @@index([googleId])
}

model ChatConversation {
  id          String        @id @default(cuid())
  sessionId   String        @unique
  userEmail   String?
  startedAt   DateTime      @default(now())
  endedAt     DateTime?
  summary     String?
  emailSent   Boolean       @default(false)
  messages    ChatMessage[]
}

model ChatMessage {
  id             String           @id @default(cuid())
  conversationId String
  conversation   ChatConversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  role           String
  content        String
  createdAt      DateTime         @default(now())

  @@index([conversationId])
}

model ContactSubmission {
  id        String   @id @default(cuid())
  name      String
  email     String
  country   String
  mobile    String
  message   String
  ipAddress String?
  createdAt DateTime @default(now())

  @@index([email])
  @@index([createdAt])
}

model Visitor {
  id            String   @id @default(cuid())
  email         String
  ipAddress     String?
  country       String?
  city          String?
  region        String?
  timezone      String?
  userAgent     String?
  usageBytes    Int      @default(0)
  lastUsageDate DateTime?
  createdAt     DateTime @default(now())

  @@index([email])
  @@index([ipAddress])
  @@index([createdAt])
}
